
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>关于我</h5>
          <div class="ibox-tools">
            <%= link_to raw("<i class='fa fa-plus'></i>  新增"), new_about_me_path,  class: "btn btn-primary btn-sm"%>
          </div>
        </div>
        <div class="ibox-content">

          <table class="table table-hover">
            <thead>
            <tr>
              <th>#ID</th>
              <th>生日</th>
              <th>毕业于</th>
              <th>网站</th>
              <th>爱好</th>
              <th>地址</th>
              <th>标题</th>
              <th>描述</th>
              <th>操作</th>
            </tr>
            </thead>
            <tbody>
            <% @about_mes.each do |about_me| %>
            <tr>
              <td class="text-success"><%= about_me.id %></td>
              <td class="text-success"><%= about_me.birthday %></td>
              <td class="text-success"><%= about_me.graduated_from %></td>
              <td class="text-success"><%= about_me.website %></td>
              <td class="text-success"><%= about_me.hobby %></td>
              <td class="text-success"><%= about_me.address %></td>
              <td class="text-success"><%= about_me.title %></td>
              <td class="text-success"><%= about_me.description %></td>
              <td>
                <%= link_to raw("<i class='fa fa-info-circle'></i> 查看"), about_me_path(about_me),  class: "btn btn-default btn-xs"%>
                <%= link_to raw("<i class='fa fa-edit'></i> 编辑"), edit_about_me_path(about_me),  class: "btn btn-success btn-xs"%>
                <%= link_to raw("<i class='fa fa-trash-o'></i> 删除"), about_me_path(about_me),  method: :delete, data: { confirm: "确定删除吗?" }, class: "btn btn-danger btn-xs" %>
              </td>
            </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
